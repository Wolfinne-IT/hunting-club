<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Tree (List) View for Hunters -->
  <record id="view_hunter_tree" model="ir.ui.view">
    <field name="name">my_module.hunter.tree</field>
    <field name="model">my_module.model_hunter</field>
    <field name="arch" type="xml">
      <tree string="Hunters">
        <field name="first_name"/>
        <field name="last_name"/>
        <field name="job"/>
        <field name="id_number"/>
      </tree>
    </field>
  </record>

  <!-- Form View for Hunters -->
  <record id="view_hunter_form" model="ir.ui.view">
    <field name="name">my_module.hunter.form</field>
    <field name="model">my_module.model_hunter</field>
    <field name="arch" type="xml">
      <form string="Hunter">
        <sheet>
          <group>
            <field name="first_name"/>
            <field name="last_name"/>
          </group>
          <group>
            <field name="address"/>
            <field name="date_of_birth"/>
          </group>
          <group>
            <field name="job"/>
            <field name="id_number"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action for Hunters -->
  <record id="action_hunters" model="ir.actions.act_window">
    <field name="name">Hunters</field>
    <field name="res_model">my_module.model_hunter</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Menu Items -->
  <menuitem id="menu_my_module_root" name="My Custom Module"/>
  <menuitem id="menu_hunters" name="Hunters" parent="menu_my_module_root"
            action="action_hunters"/>
</odoo>
